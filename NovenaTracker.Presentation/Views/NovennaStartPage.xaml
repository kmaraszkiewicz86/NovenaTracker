<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NovenaTracker.Presentation.ViewModels"
             xmlns:models="clr-namespace:NovenaTracker.Model.Models;assembly=NovenaTracker.Model"
             x:Class="NovenaTracker.Presentation.Views.NovennaStartPage"
             x:DataType="viewModels:NovennaStartPageViewModel"
             Title="Nowenny"
