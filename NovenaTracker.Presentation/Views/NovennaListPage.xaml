<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NovenaTracker.Presentation.ViewModels"
             xmlns:behaviors="clr-namespace:Kmaraszkiewicz86.Maui.Behaviors;assembly=Kmaraszkiewicz86.Maui.Behaviors"
             x:Class="NovenaTracker.Presentation.Views.NovennaListPage"
             Title="Novenna"
             BackgroundColor="Gray">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="PrzywrÃ³Ä‡ dni nowenny."
                     Priority="0"
                     Order="Primary"
                     Command="{Binding ClearAllSelectionCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadCommand}" />
    </ContentPage.Behaviors>

    <Grid Padding="16"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,*"
          RowSpacing="12">

        <Label Grid.Row="0"
               Text="{Binding Novena.Title}"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="LightGray" />

        <Label Grid.Row="1"
               Text="{Binding FirstPrayer}"
               FontSize="14"
               TextColor="LightGray" />

        <Label Grid.Row="2"
               TextColor="LightYellow"
               FontSize="16"
               FontAttributes="Bold"
               Margin="0,8,0,0"
               Text="{Binding DaysRemaining, StringFormat='PozostaÅ‚o dni: {0}'}" />

        <Label Grid.Row="3"
               Text="Day prayers:"
               FontAttributes="Bold"
               Margin="0,16,0,4"
               TextColor="LightGray" />

        <Label Grid.Row="4" Text="{Binding ErrorMessage}"
               TextColor="Red"
               FontSize="14"
               FontAttributes="Bold"
               Margin="0,4"
               IsVisible="{Binding IsErrorVisible}" />

        <CollectionView Grid.Row="5"
                        ItemsSource="{Binding DayPrayers}">
            <CollectionView.EmptyView>
                <Border Padding="20" 
                        Margin="0,20"
                        StrokeThickness="2"
                        Stroke="LightGreen"
                        BackgroundColor="DarkGreen">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>

                    <StackLayout Spacing="10" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                        <Label Text="ðŸŽ‰ Gratulacje! ðŸŽ‰" 
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="White" />

                        <Label Text="Wszystkie dni zakoÅ„czone!" 
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="LightGreen" />

                        <Button Text="PrzywrÃ³Ä‡ dni nowenny" 
                                FontSize="16"
                                FontAttributes="Bold"
                                Margin="0,10,0,0"
                                BackgroundColor="DarkOrange"
                                TextColor="White"
                                CornerRadius="8"
                                Command="{Binding ClearAllSelectionCommand}" />
                    </StackLayout>
                </Border>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="0,4"
                            StrokeThickness="1"
                            Stroke="DarkGray"
                            BackgroundColor="DimGray">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>

                        <StackLayout Grid.Column="1">
                            <Grid ColumnDefinitions="Auto, *">
                                <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsCompleted, Mode=OneWay}"
                                              VerticalOptions="Start"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:NovennaListPageViewModel}}, Path=ToggleDayCompleteCommand}"
                                              CommandParameter="{Binding .}" />

                                <Label Grid.Column="1"
                                           Text="{Binding PrayerTitle}"
                                           FontAttributes="Bold"
                                           Padding="10"
                                           TextColor="White" />
                            </Grid>

                            <StackLayout Margin="15, 5, 5, 5">
                                <Label Text="{Binding PrayerText}"
                                           LineBreakMode="WordWrap"
                                           TextColor="LightGray" />
                            </StackLayout>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
