<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NovenaTracker.Presentation.ViewModels"
             x:Class="NovenaTracker.Presentation.Views.NovennaListPage"
             x:DataType="viewModels:NovennaListPageViewModel"
             Title="Novenna"
             BackgroundColor="Gray">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="{Binding Novena.Title}"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="LightGray" />

        <Label Text="{Binding Novena.Description}"
               FontSize="14"
               TextColor="LightGray" />

        <Label Text="Day prayers:" 
               FontAttributes="Bold" 
               Margin="0,16,0,4"
               TextColor="LightGray" />

        <CollectionView ItemsSource="{Binding DayPrayers}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="0,4" 
                            StrokeThickness="1"
                            Stroke="DarkGray"
                            BackgroundColor="DimGray">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>       
                        <VerticalStackLayout>
                            <Label Text="{Binding PrayerTitle}" 
                                   FontAttributes="Bold"
                                   TextColor="LightGray" />
                            <Label Text="{Binding PrayerText}" 
                                   LineBreakMode="WordWrap"
                                   TextColor="LightGray" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
